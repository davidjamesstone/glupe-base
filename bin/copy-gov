#!/bin/bash

mkdir -p server/public/gov
cp -R node_modules/govuk_frontend_toolkit/images/* server/public/gov/images
cp -R node_modules/govuk_frontend_toolkit/javascripts/* server/public/gov/javascripts
cp -R node_modules/govuk_template_mustache/assets/* server/public/gov/
cp node_modules/govuk_template_mustache/views/layouts/govuk_template.html server/views/layout.html